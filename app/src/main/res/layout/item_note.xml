<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:id="@+id/root_list_item"
>

    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp" app:srcCompat="@drawable/im_rocket_one"
            android:id="@+id/imv_list_item_icon"
            android:tint="#FFFFFF"
            android:alpha=".86"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            style="@style/Text.Primary"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_message"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="Lorem ipsum sit dolar amet whatever"
            app:layout_constraintTop_toTopOf="@+id/imv_list_item_icon"
            app:layout_constraintStart_toEndOf="@+id/imv_list_item_icon" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@drawable/ic_access_time_black_24dp"
            android:id="@+id/imv_date_and_time"
            android:alpha=".86"
            app:layout_constraintStart_toEndOf="@+id/imv_list_item_icon" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lbl_message"/>
    <TextView
            style="@style/Text"
            android:text="TextView"
            tools:text="6:30AM 06/01/2017"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_date_and_time"
            android:textColor="@color/colorAccent"
            app:layout_constraintTop_toTopOf="@+id/imv_date_and_time"
            app:layout_constraintBottom_toBottomOf="@+id/imv_date_and_time"
            app:layout_constraintStart_toEndOf="@+id/imv_date_and_time"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>